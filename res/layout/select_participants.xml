<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1">
		<LinearLayout android:id="@+id/attendee_list"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical">
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingTop="8px"
		android:paddingBottom="0px" android:paddingLeft="5px"
		android:paddingRight="5px" android:orientation="horizontal">
		<Button android:id="@+id/find_time_button"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/find_meeting_button" />
		<TextView android:layout_width="fill_parent"
			android:paddingBottom="6px" android:paddingLeft="8px"
			android:gravity="center_vertical" android:textSize="11dip"
			android:layout_weight="1" android:layout_height="fill_parent"
			android:text="@string/settings_text" />
	</LinearLayout>
</LinearLayout>