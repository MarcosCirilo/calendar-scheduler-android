<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:background="#222" android:layout_height="?android:attr/listPreferredItemHeight"
		android:paddingTop="8px" android:paddingBottom="0px"
		android:paddingLeft="5px" android:paddingRight="5px"
		android:orientation="horizontal">
		<ImageView android:id="@+id/title_icon"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginRight="2dip" android:src="@drawable/icon">
		</ImageView>
		<LinearLayout android:orientation="vertical"
			android:layout_width="0dip" android:layout_weight="1"
			android:layout_height="fill_parent">
			<TextView android:layout_width="fill_parent"
				android:layout_height="0dip" android:layout_weight="1"
				android:textColor="#FFF" android:text="@string/app_name"
				android:textSize="16dip" />
			<TextView android:layout_width="fill_parent"
				android:layout_height="0dip" android:layout_weight="1"
				android:textColor="#FFF" android:textSize="12dip" android:ellipsize="marquee"
				android:singleLine="true" android:text="@string/sub_title" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="1px" android:background="#222"></LinearLayout>
	<TextView android:layout_width="fill_parent"
		android:paddingTop="5px" android:paddingBottom="5px"
		android:paddingLeft="5px" android:paddingRight="5px"
		android:layout_height="wrap_content" android:text="@string/select_participants_caption" />

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1">
		<LinearLayout android:id="@+id/attendee_list"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical">
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingTop="8px"
		android:paddingBottom="0px" android:paddingLeft="5px"
		android:paddingRight="5px" android:orientation="horizontal">
		<Button android:id="@+id/find_time_button"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/find_meeting_button" />
		<TextView android:layout_width="fill_parent"
			android:paddingBottom="6px" android:paddingLeft="8px" android:gravity="center_vertical" android:textSize="11dip" android:layout_weight="1"
			android:layout_height="fill_parent" android:text="@string/settings_text" />
	</LinearLayout>
</LinearLayout>